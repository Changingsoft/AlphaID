@page
@model AuthCenterWebApp.Pages.Account.Logout.LoggedOut

<div class="logged-out-page">
    <h1>
        注销
        <small>您现在已注销</small>
    </h1>

    @if (Model.View.PostLogoutRedirectUri != null)
    {
        <div>
            点击<a class="PostLogoutRedirectUri" href="@Model.View.PostLogoutRedirectUri">这里</a>返回
            <span>@Model.View.ClientName</span> 应用。
        </div>
    }

    @if (Model.View.SignOutIframeUrl != null)
    {
        <iframe width="0" height="0" class="signout" src="@Model.View.SignOutIframeUrl"></iframe>
    }
</div>

@section scripts
    {
    @if (Model.View.AutomaticRedirectAfterSignOut)
    {
        <script src="~/js/signout-redirect.js"></script>
    }
}