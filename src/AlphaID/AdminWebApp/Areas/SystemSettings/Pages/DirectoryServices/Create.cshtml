@page
@model             CreateModel
@{
}
<h1>Create Directory Service</h1>

<form method="post">
    <div class="mb-3">
        <label asp-for="Input.Name" class="form-label"></label>
        <input asp-for="Input.Name" class="form-control" />
        <span asp-validation-for="Input.Name" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Input.ServerAddress" class="form-label"></label>
        <input asp-for="Input.ServerAddress" class="form-control" />
        <span asp-validation-for="Input.ServerAddress" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Input.UserName" class="form-label"></label>
        <input asp-for="Input.UserName" class="form-control" />
        <span asp-validation-for="Input.UserName" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Input.Password" class="form-label"></label>
        <input asp-for="Input.Password" class="form-control" />
        <span asp-validation-for="Input.Password" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Input.RootDN" class="form-label"></label>
        <input asp-for="Input.RootDN" class="form-control" />
        <span asp-validation-for="Input.RootDN" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Input.DefaultUserOU" class="form-label"></label>
        <input asp-for="Input.DefaultUserOU" class="form-control" />
        <span asp-validation-for="Input.DefaultUserOU" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Input.UpnSuffix" class="form-label"></label>
        <input asp-for="Input.UpnSuffix" class="form-control" />
        <span asp-validation-for="Input.UpnSuffix" class="text-danger"></span>
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>
    <button type="submit" class="btn btn-primary">创建</button>
</form>