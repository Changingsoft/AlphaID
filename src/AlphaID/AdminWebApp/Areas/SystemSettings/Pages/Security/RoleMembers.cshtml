@page "{role?}"
@model RoleMembersModel
@{
    ViewBag.Title = "Role Members";
}

<h3>Role Members</h3>

<div class="row">
    <div class="col-3">
        <ul>
            @foreach (var role in RoleConstants.Roles)
            {
                <li><a asp-route-role="@role.Name">@role.DisplayName</a></li>
            }
        </ul>
    </div>
    <div class="col-9">
        <h2>Members</h2>
        @if (Model.RoleMembers != null)
        {
            if (Model.RoleMembers.Any())
            {
                <form method="post" asp-page-handler="RemoveMember" asp-route-role="@Model.Role">
                    <ul>
                        @foreach (var member in Model.RoleMembers)
                        {
                            <li>@member.UserName <button type="submit" asp-page-handler="RemoveMember" asp-route-personId="@member.UserId" class="btn btn-outline-danger btn-sm" onclick="return confirm('确实要移除吗？');">移除</button></li>
                        }
                    </ul>
                </form>
            }
            else
            {
                <p>No members</p>
            }
            <button type="button" data-toggle="modal" data-target="#memberEditor" class="btn btn-primary">Add member</button>
        }
        else
        {
            <p>Select one role to view members.</p>
        }
    </div>
</div>
<div class="modal fade" id="memberEditor" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">Add member</div>
            <div class="modal-body">
                <form method="post" asp-page-handler="AddMember" asp-route-role="@Model.Role">
                    <div class="mb-3">
                        <label for="personSearch" class="form-label">Search person</label>
                        <input name="personSearch" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label asp-for="Input.UserName" class="form-label"></label>
                        <input asp-for="Input.UserName" class="form-control" readonly />
                    </div>
                    <input asp-for="Input.PersonId" type="hidden" />
                    <input asp-for="Input.PhoneticSearchHint" type="hidden" />
                    <button type="submit" class="btn btn-primary">Add</button>
                    <button type="reset" class="btn btn-secondary">Clear</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts
    {

    <script>
        $(function () {
            $("[name='personSearch']").autocomplete({
                source: "@Url.Action("SearchPerson", "IdService")",
                minLength: 2,
                appendTo: "#memberEditor",
                select: function (event, ui) {
                    $(this).val(ui.item.name);
                    $("[name='Input.PersonId']").val(ui.item.subjectId);
                    $("[name='Input.UserName']").val(ui.item.name);
                    $("[name='Input.PhoneticSearchHint']").val(ui.item.phoneticSearchHint);

                    return false;
                }
            })
                .autocomplete("instance")._renderItem = function (ul, item) {
                    var div = $("<div>");
                    div.append("<p>" + item.name + "</p>")
                    div.append("<ul>").append("<li>ddd</li>");
                    var li = $("<li>").append(div);
                    return li.appendTo(ul);
                };
        });

    </script>

                }