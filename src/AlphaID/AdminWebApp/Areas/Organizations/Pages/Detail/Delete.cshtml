@page
@model DeleteModel
@{
    this.ViewBag.Title = $"{localizer["Deleting"].Value} {this.Model.Organization.Name}";
}
<h1>@this.ViewBag.Title</h1>

<p>@localizer["Are you sure you want to delete this organization?"]</p>

<form method="post">
    <div class="mb-3">
        <p>@localizer["Typing organization name below to confirm deletion."]</p>
        <label asp-for="@Model.Input.Name" class="form-label"></label>
        <input asp-for="@Model.Input.Name" class="form-control" />
        <span asp-validation-for="@Model.Input.Name" class="text-danger"></span>
    </div>
    <div asp-validation-summary="All"></div>
    <button class="btn btn-warning" type="submit">@localizer["Delete"]</button>
</form>