@inject IHostEnvironment Env
@inject IOptions<SystemUrlInfo> SystemUrl
@if(Env.IsDevelopment())
{
    <hr />
    <div class="card card-sm border-blue">
        <div class="card-header">
            <h1>Debug Panel</h1>
        </div>
        <div class="card-body">
            <h2>Useful Links</h2>
            <ul class="list-inline">
                @* ReSharper disable StringLiteralTypo *@
                <li class="list-inline-item"><a href="@(new Uri(SystemUrl.Value.AuthCenterUrl, $"/People/{WebUtility.UrlEncode("liubei")}"))">刘备</a></li>
                <li class="list-inline-item"><a href="@(new Uri(SystemUrl.Value.AuthCenterUrl, $"/People/{WebUtility.UrlEncode("guanyu")}"))">关羽</a></li>
                <li class="list-inline-item"><a href="@(new Uri(SystemUrl.Value.AuthCenterUrl, $"/People/{WebUtility.UrlEncode("zhangfei")}"))">张飞</a></li>
                <li class="list-inline-item"><a href="@(new Uri(SystemUrl.Value.AuthCenterUrl, $"/People/{WebUtility.UrlEncode("zhugeliang")}"))">诸葛亮</a></li>
                @* ReSharper restore StringLiteralTypo *@
            </ul>

            <ul class="list-inline">
                <li class="list-inline-item"><a href="@(new Uri(SystemUrl.Value.AuthCenterUrl, $"/Organization/{WebUtility.UrlEncode("蜀汉集团")}"))">蜀汉集团</a></li>
                <li class="list-inline-item"><a href="@(new Uri(SystemUrl.Value.AuthCenterUrl, $"/Organization/{WebUtility.UrlEncode("北魏集团")}"))">北魏集团</a></li>
                <li class="list-inline-item"><a href="@(new Uri(SystemUrl.Value.AuthCenterUrl, $"/Organization/{WebUtility.UrlEncode("东吴集团")}"))">东吴集团</a></li>
            </ul>
            <h2>Route Data</h2>
            <ul class="list-inline">
                @foreach (var routeValue in ViewContext.RouteData.Values)
                {
                    <li class="list-inline-item">["@(routeValue.Key)"] = "@(routeValue.Value)"</li>
                }
            </ul>
            <h2>Access user</h2>
            <table class="table table-sm">
                <thead>
                    <tr>
                        <td>Type</td>
                        <td>Value</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var claim in User.Claims)
                    {
                        <tr>
                            <td>@claim.Type</td>
                            <td>@claim.Value</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
