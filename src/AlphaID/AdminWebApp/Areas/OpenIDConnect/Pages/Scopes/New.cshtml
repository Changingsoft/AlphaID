@page
@model NewModel
@{
    ViewBag.Title = L["Create scope"];
}
<h3>@ViewBag.Title</h3>

<form method="post">
    <div class="mb-3">
        <label asp-for="Input.Name" class="form-label"></label>
        <input asp-for="Input.Name" class="form-control" />
        <span asp-description-for="Input.Name" class="form-hint"></span>
        <span asp-validation-for="Input.Name" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Input.DisplayName" class="form-label"></label>
        <input asp-for="Input.DisplayName" class="form-control" />
        <span asp-description-for="Input.DisplayName" class="form-hint"></span>
        <span asp-validation-for="Input.DisplayName" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Input.Description" class="form-label"></label>
        <input asp-for="Input.Description" class="form-control" />
        <span asp-description-for="Input.Description" class="form-hint"></span>
        <span asp-validation-for="Input.Description" class="text-danger"></span>
    </div>
    <div class="form-check">
        <input asp-for="Input.Required" class="form-check-input" />
        <label asp-for="Input.Required" class="form-check-label"></label>
        <span asp-description-for="Input.Required" class="form-check-description"></span>
    </div>
    <div class="form-check">
        <input asp-for="Input.Emphasize" class="form-check-input" />
        <label asp-for="Input.Emphasize" class="form-check-label"></label>
        <span asp-description-for="Input.Emphasize" class="form-check-description"></span>
    </div>
    <div class="form-check">
        <input asp-for="Input.ShowInDiscoveryDocument" class="form-check-input" />
        <label asp-for="Input.ShowInDiscoveryDocument" class="form-check-label"></label>
        <span asp-description-for="Input.ShowInDiscoveryDocument" class="form-check-description"></span>
    </div>
    <button type="submit" class="btn btn-primary">@L["Create"]</button>
</form>