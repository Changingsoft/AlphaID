@page
@model AdvancedModel
@{
    ViewBag.Title = L["Advanced"];
}
<h3>@L["Advanced"]</h3>

<form method="post">
    <h4>@L["Basics"]</h4>
    <div class="form-check">
        <input asp-for="Input.AllowAccessTokensViaBrowser" class="form-check-input" />
        <label asp-for="Input.AllowAccessTokensViaBrowser" class="form-check-label"></label>
        <span asp-description-for="Input.AllowAccessTokensViaBrowser" class="form-check-description"></span>
    </div>
    <div class="form-check">
        <input asp-for="Input.RequireRequestObject" class="form-check-input" />
        <label asp-for="Input.RequireRequestObject" class="form-check-label"></label>
        <span asp-description-for="Input.RequireRequestObject" class="form-check-description"></span>
    </div>

    <h4>@L["Authentication / Session management"]</h4>
    <div class="mb-3">
        <label asp-for="Input.FrontChannelLogoutUri" class="form-label"></label>
        <input asp-for="Input.FrontChannelLogoutUri" class="form-control" />
        <span asp-description-for="Input.FrontChannelLogoutUri" class="form-hint"></span>
        <span asp-validation-for="Input.FrontChannelLogoutUri"></span>
    </div>
    <div class="form-check">
        <input asp-for="Input.FrontChannelLogoutSessionRequired" class="form-check-input" />
        <label asp-for="Input.FrontChannelLogoutSessionRequired" class="form-check-label"></label>
        <span asp-description-for="Input.FrontChannelLogoutSessionRequired" class="form-check-description"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Input.BackChannelLogoutUri" class="form-label"></label>
        <input asp-for="Input.BackChannelLogoutUri" class="form-control" />
        <span asp-description-for="Input.BackChannelLogoutUri" class="form-hint"></span>
        <span asp-validation-for="Input.BackChannelLogoutUri"></span>
    </div>
    <div class="form-check">
        <input asp-for="Input.BackChannelLogoutSessionRequired" class="form-check-input" />
        <label asp-for="Input.BackChannelLogoutSessionRequired" class="form-check-label"></label>
        <span asp-description-for="Input.BackChannelLogoutSessionRequired" class="form-check-description"></span>
    </div>
    <div class="form-check">
        <input asp-for="Input.EnableLocalLogin" class="form-check-input" />
        <label asp-for="Input.EnableLocalLogin" class="form-check-label"></label>
        <span asp-description-for="Input.EnableLocalLogin" class="form-check-description"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Input.UserSsoLifetime" class="form-label"></label>
        <input asp-for="Input.UserSsoLifetime" class="form-control" />
        <span asp-description-for="Input.UserSsoLifetime" class="form-hint"></span>
        <span asp-validation-for="Input.UserSsoLifetime"></span>
    </div>
    <div class="form-check">
        <input asp-for="Input.CoordinateLifetimeWithUserSession" class="form-check-input" />
        <label asp-for="Input.CoordinateLifetimeWithUserSession" class="form-check-label"></label>
        <span asp-description-for="Input.CoordinateLifetimeWithUserSession" class="form-check-description"></span>
    </div>

    <h4>@L["Token"]</h4>
    <div class="mb-3">
        <label asp-for="Input.IdentityTokenLifetime" class="form-label"></label>
        <input asp-for="Input.IdentityTokenLifetime" class="form-control" />
        <span asp-description-for="Input.IdentityTokenLifetime" class="form-hint"></span>
        <span asp-validation-for="Input.IdentityTokenLifetime"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Input.AllowedIdentityTokenSigningAlgorithms" class="form-label"></label>
        <input asp-for="Input.AllowedIdentityTokenSigningAlgorithms" class="form-control" />
        <span asp-description-for="Input.AllowedIdentityTokenSigningAlgorithms" class="form-hint"></span>
        <span asp-validation-for="Input.AllowedIdentityTokenSigningAlgorithms"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Input.AccessTokenLifetime" class="form-label"></label>
        <input asp-for="Input.AccessTokenLifetime" class="form-control" />
        <span asp-description-for="Input.AccessTokenLifetime" class="form-hint"></span>
        <span asp-validation-for="Input.AccessTokenLifetime"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Input.AuthorizationCodeLifetime" class="form-label"></label>
