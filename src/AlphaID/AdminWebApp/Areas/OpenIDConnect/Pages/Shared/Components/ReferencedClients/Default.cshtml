@using Duende.IdentityServer.EntityFramework.Entities;
@model IQueryable<Client>
<div class="card">
    <div class="card-header">
        <h3 class="card-title">@localizer["Referenced Clients"]</h3>
    </div>
    <div class="table-responsive">
        <table class="table table-sm card-table">
            <thead>
                <tr>
                    <td>@localizer["Name"]</td>
                    <td>@localizer["Client Anchor"]</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var client in Model)
                {
                    <tr>
                        <td><a asp-page="/Clients/Detail/Index" asp-route-id="@client.Id">@client.ClientName</a></td>
                        <td>@client.ClientId</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
