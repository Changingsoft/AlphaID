@inject PersistedGrantDbContext DbContext

<div class="card">
    <div class="card-body">
        <div class="d-flex align-items-center">
            <div class="subheader">
                <a asp-page="/ActiveSessions" asp-area="OpenIDConnect">@L["Active sessions"]</a>
            </div>
            
        </div>
        <div class="d-flex align-items-baseline">
            <div class="h1 mb-3 me-2">@DbContext.ServerSideSessions.Count()</div>
            <div class="me-auto">
                <span class="text-green d-inline-flex align-items-center lh-1">
                    <i class="ti ti-trending-up"></i>
                </span>
            </div>
        </div>
    </div>
</div>