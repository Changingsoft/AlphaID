@page
@model AuthCenterWebApp.Areas.Settings.Pages.Organizations.JoinRequests.RequestModel
@{
    ViewBag.Title = L["Request join organization"];
}
<h1>@ViewBag.Title</h1>

<form method="post">
    <div class="mb-3">
        <label asp-for="OrganizationName" class="form-label required"></label>
        <input asp-for="OrganizationName" class="form-control" />
        <span asp-validation-for="OrganizationName" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">@L["Request"]</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
