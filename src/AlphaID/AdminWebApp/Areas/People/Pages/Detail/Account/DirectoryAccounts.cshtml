@page
@model DirectoryAccountsModel
@{
    ViewBag.Title = L["Directory Accounts"];
}
<h2>@ViewBag.Title</h2>

<table class="table">
    <thead>
        <tr>
            <td>@L["Logon ID"]</td>
            <td>@L["Person ID"]</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var acc in Model.LogonAccounts)
        {
            <tr>
                <td>@acc.LogonId</td>
                <td>@acc.PersonId</td>
            </tr>
        }
    </tbody>
</table>

<p><a asp-page="CreateDirectoryAccount" asp-route-anchor="@Model.Person.Id">@L["Create new account"]</a></p>
<p><a asp-page="BindDirectoryAccount" asp-route-anchor="@Model.Person.Id">@L["Bind exists account"]</a></p>