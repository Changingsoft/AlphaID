        <input asp-for="Input.PairWiseSubjectSalt" class="form-control" />
        <span asp-description-for="Input.PairWiseSubjectSalt" class="form-hint"></span>
        <span asp-validation-for="Input.PairWiseSubjectSalt"></span>
    </div>

    <h4>@L["Refresh Token"]</h4>
    <div class="mb-3">
        <label asp-for="Input.AbsoluteRefreshTokenLifetime" class="form-label"></label>
        <input asp-for="Input.AbsoluteRefreshTokenLifetime" class="form-control" />
        <span asp-description-for="Input.AbsoluteRefreshTokenLifetime" class="form-hint"></span>
        <span asp-validation-for="Input.AbsoluteRefreshTokenLifetime"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Input.SlidingRefreshTokenLifetime" class="form-label"></label>
        <input asp-for="Input.SlidingRefreshTokenLifetime" class="form-control" />
        <span asp-description-for="Input.SlidingRefreshTokenLifetime" class="form-hint"></span>
        <span asp-validation-for="Input.SlidingRefreshTokenLifetime"></span>
