@page
@model RemovePasswordModel
@{
    ViewBag.Title = L["Remove password"];
}
@Html.DisplayFor(m => m.Result)
<h2>@ViewBag.Title</h2>
<div class="row">
    <div class="col-md-6">
        <form id="change-password-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3">
                <input asp-for="Password" class="form-control" autocomplete="current-password" aria-required="true" autofocus />
                <label asp-for="Password" class="form-label"></label>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <button type="submit" class="w-100 btn btn-lg btn-danger">@L["Remove password"]</button>
        </form>
    </div>
</div>
