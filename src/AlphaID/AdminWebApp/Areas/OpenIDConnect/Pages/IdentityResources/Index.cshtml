@page
@model IndexModel
@{
    this.ViewBag.Title = this.localizer["Identity Resources"];
}
@section PageHeader{
    <div class="row">
        <div class="col">
            <h1>@localizer["Identity Resources"]</h1>
        </div>
        <div class="col-auto">
            <a asp-page="Create" class="btn btn-primary">
                <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                    <use xlink:href="/lib/tabler-icons/tabler-sprite-nostroke.svg#tabler-plus"></use>
                </svg>
                @localizer["New identity resource"]
            </a>
        </div>
    </div>
}

<div class="card">
    <table class="table card-table">
        <thead>
            <tr>
                <td>@localizer["Name"]</td>
                <td>@localizer["Display name"]</td>
                <td>@localizer["Description"]</td>
                <td>@localizer["Enabled"]</td>
                <td>@localizer["Emphasize"]</td>
                <td>@localizer["Show in discovery doc"]</td>
                <td>@localizer["Created at"]</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var idr in Model.Results)
            {
                <tr>
                    <td><a asp-page="Detail/Index" asp-route-id="@idr.Id">@idr.Name</a></td>
                    <td>@idr.DisplayName</td>
                    <td>@idr.Description</td>
                    <td><input asp-for="@idr.Enabled" class="form-check-input" disabled /></td>
                    <td><input asp-for="@idr.Emphasize" class="form-check-input" disabled /></td>
                    <td><input asp-for="@idr.ShowInDiscoveryDocument" class="form-check-input" disabled /></td>
                    <td>@idr.Created</td>
                </tr>
            }
        </tbody>
    </table>
</div>
