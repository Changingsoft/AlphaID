@page
@model             CreateModel
@{
}
<h3>创建客户端</h3>
<form method="post">
    <h4>基本信息</h4>
    <div class="form-group">
        <label asp-for="Input.ClientId" class="font-weight-bold"></label>
        <input asp-for="Input.ClientId" class="form-control" />
        <span asp-validation-for="Input.ClientId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Input.ClientName" class="font-weight-bold"></label>
        <input asp-for="Input.ClientName" class="form-control" />
        <span asp-validation-for="Input.ClientName" class="text-danger"></span>
    </div>
    <div class="form-group form-check">
        <input asp-for="Input.RequireClientSecret" class="form-check-input" />
        <label asp-for="Input.RequireClientSecret" class="form-check-label"></label>
    </div>
    <div class="form-group">
        <label asp-for="Input.ClientSecret"></label>
        <input asp-for="Input.ClientSecret" class="form-control" />
        <span asp-validation-for="Input.ClientSecret" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Input.Description"></label>
        <input asp-for="Input.Description" class="form-control" />
        <span asp-validation-for="Input.Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Input.RedirectUri"></label>
        <input asp-for="Input.RedirectUri" class="form-control" />
        <span asp-validation-for="Input.RedirectUri" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Input.DefaultGrantType" class="font-weight-bold"></label>
        <input asp-for="Input.DefaultGrantType" class="form-control" />
        <span asp-validation-for="Input.DefaultGrantType" class="text-danger"></span>
    </div>
    <div class="form-group form-check">
        <input asp-for="Input.RequireConsent" class="form-check-input" />
        <label asp-for="Input.RequireConsent" class="form-check-label"></label>
    </div>
    <div class="form-group form-check">
        <input asp-for="Input.AllowRememberConsent" class="form-check-input" />
        <label asp-for="Input.AllowRememberConsent" class="form-check-label"></label>
    </div>

    <h4>安全性</h4>
    <div class="form-group form-check">
        <input asp-for="Input.RequirePkce" class="form-check-input" />
        <label asp-for="Input.RequirePkce" class="form-check-label"></label>
    </div>
    <div class="form-group form-check">
        <input asp-for="Input.AllowPlainTextPkce" class="form-check-input" />
        <label asp-for="Input.AllowPlainTextPkce" class="form-check-label"></label>
    </div>
    <div class="form-group form-check">
        <input asp-for="Input.AllowOfflineAccess" class="form-check-input" />
        <label asp-for="Input.AllowOfflineAccess" class="form-check-label"></label>
    </div>
    <div class="form-group">
        <label asp-for="Input.IdentityTokenLifetime"></label>
        <input asp-for="Input.IdentityTokenLifetime" class="form-control" />
        <span asp-validation-for="Input.IdentityTokenLifetime" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Input.AccessTokenLifetime"></label>
        <input asp-for="Input.AccessTokenLifetime" class="form-control" />
        <span asp-validation-for="Input.AccessTokenLifetime" class="text-danger"></span>
    </div>

    <p>
        <button class="btn btn-secondary" type="button" data-toggle="collapse" data-target="#advanced-settings-panel" aria-expanded="false" aria-controls="collapseWidthExample">
            高级选项
        </button>
    </p>
    <div class="collapse" id="advanced-settings-panel">
        <div class="card card-body">
            <div class="form-group">
                <label asp-for="Input.ClientUri"></label>
                <input asp-for="Input.ClientUri" class="form-control" />
                <span asp-validation-for="Input.ClientUri" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.LogoUri"></label>
                <input asp-for="Input.LogoUri" class="form-control" />
                <span asp-validation-for="Input.LogoUri" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div asp-validation-summary="All"></div>
    <button type="submit" class="btn btn-primary">创建</button>
</form>