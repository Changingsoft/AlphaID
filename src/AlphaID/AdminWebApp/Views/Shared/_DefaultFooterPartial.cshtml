<div class="container-xl">
    <div class="row text-center align-items-center flex-row-reverse">
        <div class="col-lg-auto ms-lg-auto">
            <ul class="list-inline list-inline-dots mb-0">
                @if (User.IsInRole("Administrators"))
                {
                    <li class="list-inline-item">
                        <a asp-area="SystemSettings" asp-page="/Index" class="link-secondary">@L["System Management"]</a>
                    </li>
                }
            </ul>
        </div>
        <div class="col-12 col-lg-auto mt-3 mt-lg-0">
            <ul class="list-inline list-inline-dots mb-0">
                <li class="list-inline-item">
                    Copyright © @(Product.Value.Copyright)
                </li>
                <li class="list-inline-item">
                    <a asp-page="/Terms" class="link-secondary">@L["Terms of service"]</a>
                    <a asp-page="/Privacy" class="link-secondary">@L["Privacy"]</a>
                </li>

            </ul>
        </div>
    </div>
</div>