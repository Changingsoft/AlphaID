@page
@model IndexModel
@{
    ViewBag.Title = L["Identity providers"];
}

@section PageHeader{
    <div class="row">
        <div class="col">
            <h1>@L["Identity providers"]</h1>
        </div>
        <div class="col-auto">
            <a asp-page="New" class="btn btn-primary">
                <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                    <use xlink:href="/lib/tabler-icons/tabler-sprite-nostroke.svg#tabler-plus"></use>
                </svg>
                @L["New identity provider"]
            </a>
        </div>
    </div>
}

<div class="card">
    <table class="table card-table">
        <thead>
        <tr>
            <td>@L["Scheme"]</td>
            <td>@L["Enabled"]</td>
            <td>@L["Display name"]</td>
            <td>@L["Type"]</td>
            <td>@L["Created at"]</td>
        </tr>
        </thead>
        <tbody>
        @foreach (var idp in Model.Results)
        {
            <tr>
                <td>
                    <a asp-page="Detail/Index" asp-route-id="@idp.Id">@idp.Scheme</a>
                </td>
                <td>@idp.Enabled</td>
                <td>@idp.DisplayName</td>
                <td>@idp.Type</td>
                <td>@idp.Created</td>
            </tr>
        }
        </tbody>
    </table>
</div>