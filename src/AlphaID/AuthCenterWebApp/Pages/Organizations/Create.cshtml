@page
@model CreateModel
@{
    this.ViewBag.Title = "创建组织";
}
<div class="page-body">
    <div class="container-xl">
        <h1>创建组织</h1>
        <p>创建一个新的组织，用来表示一个公司、个体工商户、团体等任何由一群人组成的群体。</p>
        <div class="card">
            <div class="card-body">
                <form method="post">
                    <h2>组织信息</h2>
                    <div asp-validation-summary="All"></div>
                    <div class="mb-3">
                        <label asp-for="Input.Name" class="form-label required"></label>
                        <input asp-for="Input.Name" class="form-control" />
                        <span asp-validation-for="Input.Name" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="USCI" class="form-label"></label>
                        <input asp-for="USCI" class="form-control" />
                        <span asp-validation-for="USCI" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Input.Domicile" class="form-label"></label>
                        <input asp-for="Input.Domicile" class="form-control" />
                        <span asp-validation-for="Input.Domicile" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Input.Representative" class="form-label"></label>
                        <input asp-for="Input.Representative" class="form-control" />
                        <span asp-validation-for="Input.Representative" class="text-danger"></span>
                    </div>
                    <h2>您在该组织</h2>
                    <div class="mb-3">
                        <label asp-for="Input.Title" class="form-label"></label>
                        <input asp-for="Input.Title" class="form-control" />
                        <span asp-validation-for="Input.Title" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Input.Department" class="form-label"></label>
                        <input asp-for="Input.Department" class="form-control" />
                        <span asp-validation-for="Input.Department" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Input.Remark" class="form-label"></label>
                        <input asp-for="Input.Remark" class="form-control" />
                        <span asp-validation-for="Input.Remark" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary">@localizer["Create"]</button>
                </form>

            </div>
        </div>
    </div>
</div>
