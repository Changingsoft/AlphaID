@page "{id}"
@model AdminWebApp.Areas.OpenIDConnect.Pages.ApiResources.Detail.ClaimsModel
@{
}
<h2>User Claims</h2>

<form method="post" asp-page-handler="Remove">
    <table class="table">
        <thead>
            <tr>
                <td>Type</td>
                <td></td>
            </tr>
        </thead>
        <tbody>
            @foreach(var claim in this.Model.Data.UserClaims)
            {
                <tr>
                    <td>@claim.Type</td>
                    <td><button type="submit" class="btn btn-sm btn-danger" name="claimId" value="@claim.Id" onclick="return confirm('确实要删除吗');">Remove</button></td>
                </tr>
            }
        </tbody>
    </table>
</form>

<div class="card">
    <div class="card-header">
        <h3>Add Claim</h3>
    </div>
    <div class="card-body">
        <form method="post" asp-page-handler="Add">
            <div class="form-group">
                <label asp-for="NewClaim"></label>
                <input asp-for="NewClaim" class="form-control" />
                <span asp-validation-for="NewClaim" class="text-danger"></span>
            </div>
            <div asp-validation-summary="All" class="text-danger"></div>
            <button type="submit" class="btn btn-primary">Add</button>
        </form>
    </div>
</div>