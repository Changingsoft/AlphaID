@page "{id}"
@model             BindDirectoryAccountModel
@{
}
<h1>Bind exists account</h1>

<form method="post">
    <div class="input-group">
        <div class="input-group-prepend">
            <select name="serviceId" class="form-control">
                @foreach (var svc in this.Model.DirectoryServices)
                {
                    <option value="@svc.Id">@svc.Name</option>
                }
            </select>
        </div>
        <input name="keywords" class="form-control" placeholder="姓名、拼音全拼或账户名……" autofocus />
        <div class="input-group-append">
            <button type="submit" asp-page-handler="Search" class="btn btn-primary">Search</button>
        </div>
    </div>
    

    <table class="table table-striped table-sm">
        <thead>
            <tr>
                <td>Display Name</td>
                <td>Name</td>
                <td>SAM Account Name</td>
                <td>User Principal Name</td>
                <td>Mobile</td>
                <td>Actions</td>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in this.Model.SearchItems)
            {
                <tr>
                    <td>@item.DisplayName</td>
                    <td>@item.Name</td>
                    <td>@item.SAMAccountName</td>
                    <td>@item.UserPrincipalName</td>
                    <td>@item.Mobile</td>
                    <td><button type="submit" asp-page-handler="Bind" asp-route-entryGuid="@item.ObjectGUID" class="btn btn-sm btn-primary">Bind</button></td>
                </tr>
            }
        </tbody>
    </table>
</form>