@page
@model FindPasswordByMobileModel
@{
    ViewBag.Title = L["Find password via mobile phone."];
}
<div class="text-center mb-4">
    <a asp-area="" asp-page="/Index" class="navbar-brand navbar-brand-autodark">
        <img src="/logo.png" width="32" height="32" alt="Tabler" class="navbar-brand-image">
        @Product.Value.Name @L["Account"]
    </a>
</div>
<div class="card card-md">
    <div class="card-body">
        <h2>@L["Find password by your phone"]</h2>
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3">
                <label asp-for="Mobile" class="form-label"></label>
                <input asp-for="Mobile" class="form-control" aria-required="true" />
                <span asp-validation-for="Mobile" class="text-danger"></span>
            </div>
            <button type="submit" class="w-100 btn btn-lg btn-primary">@L["Send reset password short message"]</button>
        </form>
    </div>
</div>
