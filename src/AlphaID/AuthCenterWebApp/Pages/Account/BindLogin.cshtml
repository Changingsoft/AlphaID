@page
@model BindLoginModel
@{
    Layout = "Tabler/_Page_Center";
    ViewBag.Title = L["Binding external account"];
}

<div class="container container-tight py-4">
    <div class="text-center mb-4">
        <a asp-area="" asp-page="/Index" class="navbar-brand navbar-brand-autodark">
            <img src="/logo.png" width="32" height="32" alt="Tabler" class="navbar-brand-image">
            @Product.Value.Name @L["Account"]
        </a>
    </div>
    <div class="card card-md">
        <div class="card-body">
            <p>@L["You are now signing in from external, sign in {0} for binding to external login.", Product.Value.Name]</p>
            <form method="post">
                <input type="hidden" asp-for="Input.ReturnUrl"/>

                <div class="form-group">
                    <label asp-for="Input.Username" class="form-label"></label>
                    <input class="form-control" asp-for="Input.Username" autofocus>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password" class="form-label"></label>
                    <input type="password" class="form-control" placeholder="密码" asp-for="Input.Password" autocomplete="off">
                </div>
                <partial name="_ValidationSummary"/>
                <button class="btn btn-primary" name="Input.Button" value="login">@L["Sign in"]</button>
                <button class="btn btn-secondary" name="Input.Button" value="cancel">@L["Cancel"]</button>

                <p>
                    <a asp-page="ForgetPassword">忘记密码？</a>
                </p>
            </form>
        </div>
    </div>
    <div class="text-center text-secondary mt-3">
        @L["Don't have account yet?"] <a asp-page="SignUp" tabindex="-1">@L["Sign up"]</a>
    </div>
</div>