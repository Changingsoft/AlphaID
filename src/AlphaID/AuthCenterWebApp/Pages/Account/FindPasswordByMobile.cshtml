@page
@model AuthCenterWebApp.Pages.Account.FindPasswordByMobileModel
@{
    this.ViewBag.Title = this.localizer["Find password via mobile phone."].Value;
}
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <label asp-for="Mobile" class="form-label"></label>
                <input asp-for="Mobile" class="form-control" aria-required="true" />
                <span asp-validation-for="Mobile" class="text-danger"></span>
            </div>
            <button type="submit" class="w-100 btn btn-lg btn-primary">@localizer["Send reset password short message"]</button>
        </form>
    </div>
</div>