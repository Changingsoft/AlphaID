@page
@model MembersOfModel
@{
    this.ViewBag.Title = this.Model.Person.Name + " Membership";
}

<partial name="_PersonSummary" model="@Model.Person" />
<h2>Membership</h2>
<table class="table">
    <thead>
        <tr>
            <td>Organization</td>
            <td>Department</td>
            <td>Title</td>
            <td>Remark</td>
            <td>Operations</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var member in this.Model.OrganizationMembers)
        {
            <tr>
                <td>@member.Organization.Name</td>
                <td>@member.Department</td>
                <td>@member.Title</td>
                <td>@member.Remark</td>
                <td>
                    <a asp-page="EditMember" asp-route-anchor="@this.ViewContext.RouteData.Values["id"]" asp-route-orgId="@member.OrganizationId">Edit</a>
                    <form method="post" asp-page-handler="LeaveOrganization" asp-route-organizationid="@member.OrganizationId">
                        <button type="submit" class="btn btn-danger btn-sm">Remove</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<hr />
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#memberEditor">Join organization</button>

<div class="modal fade" id="memberEditor">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">Join organization</div>
            <div class="modal-body">
                <form method="post" asp-page-handler="JoinOrganization">
                    <div class="mb-3">
                        <label for="organizationSearch" class="form-label">Search organization</label>
                        <input name="organizationSearch" type="text" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label asp-for="@Model.OrganizationId" class="form-label"></label>
                        <input asp-for="@Model.OrganizationId" class="form-control" readonly />
                        <span asp-validation-for="@Model.OrganizationId"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="@Model.Department" class="form-label"></label>
                        <input asp-for="@Model.Department" class="form-control" />
                        <span asp-validation-for="@Model.Department"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="@Model.Title" class="form-label"></label>
                        <input asp-for="@Model.Title" class="form-control" />
                        <span asp-validation-for="@Model.Title"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="@Model.Remark" class="form-label"></label>
                        <input asp-for="@Model.Remark" class="form-control" />
                        <span asp-validation-for="@Model.Remark"></span>
                    </div>
                    <button type="submit" class="btn btn-primary">Join</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section scripts
    {

    <script>
        $(function () {
            $("[name='organizationSearch']").autocomplete({
                source: "@(this.Url.Action("SearchOrganization", "IdService"))",
                minLength: 2,
                appendTo: "#memberEditor",
                select: function (event, ui) {
                    $(this).val(ui.item.name);
                    $("[name='OrganizationId']").val(ui.item.subjectId);
                    //$("[name='Input.UserName']").val(ui.item.name);
                    //$("[name='Input.PhoneticSearchHint']").val(ui.item.phoneticSearchHint);

                    return false;
                }
            })
                .autocomplete("instance")._renderItem = function (ul, item) {
                    var div = $("<div>");
                    div.append("<p>" + item.name + "</p>")
                    div.append("<ul>").append("<li>ddd</li>");
                    var li = $("<li>").append(div);
                    return li.appendTo(ul);
                };
        });

    </script>

                }