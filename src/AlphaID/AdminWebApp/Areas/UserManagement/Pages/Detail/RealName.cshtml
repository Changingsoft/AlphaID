@page
@model RealNameModel
@{
    ViewBag.Title = L["Real name"];
}
<h1>@L["Real name"]</h1>

@if (Model.RealNameAuthentications.Any())
{
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Real name Overview</h3>
        </div>
        <div class="card-body">
            @foreach (var authentication in Model.RealNameAuthentications)
            {
                <div class="datagrid">
                    <div class="datagrid-item">
                        <div class="datagrid-title">Status</div>
                        <div class="datagrid-content">
                            <span class="badge bg-green text-green-fg">@authentication.Applied</span>
                        </div>
                    </div>
                    <div class="datagrid-item">
                        <div class="datagrid-title">Accepted at</div>
                        <div class="datagrid-content">@authentication.ValidatedAt</div>
                    </div>
                    <div class="datagrid-item">
                        <div class="datagrid-title">Expires at</div>
                        <div class="datagrid-content">@authentication.ExpiresAt</div>
                    </div>
                    <div class="datagrid-item">
                        <div class="datagrid-title">Passed by</div>
                        <div class="datagrid-content">@authentication.ValidatedBy</div>
                    </div>
                </div>
            }
        </div>
    </div>
}
else
{
    <p>No real name info found.</p>
}