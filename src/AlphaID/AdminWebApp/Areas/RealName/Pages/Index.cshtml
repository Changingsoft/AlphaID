@page
@model IndexModel
@{
    ViewBag.Title = L["Real-name Center"];
}
<h1>@L["Real-name Center"]</h1>
<h2>@L["10 Pending Requests"]</h2>
<a asp-page="Requests">@L["More"]</a>
<div class="list-group list-group-flush">
    @foreach (var request in Model.PendingRequests)
    {
        <div class="list-group-item">
            @Html.DisplayFor(m => request)
        </div>
    }
</div>
