@page "{id}"
@model DetailModel
@{
}

<h3></h3>
<h4>@localizer["Summary"]</h4>
<dl>
    <dt>@localizer["Name"]</dt>
    <dd>@Model.Data.Name</dd>
    <dt>@localizer["Display name"]</dt>
    <dd>@Model.Data.DisplayName</dd>
    <dt>@localizer["Enabled"]</dt>
    <dd>@Model.Data.Enabled</dd>
    <dt>@localizer["Emphasize"]</dt>
    <dd>@Model.Data.Emphasize</dd>
    <dt>@localizer["Show in discovery document"]</dt>
    <dd>@Model.Data.ShowInDiscoveryDocument</dd>
    <dt>@localizer["Created"]</dt>
    <dd>@Model.Data.Created</dd>
    <dt>@localizer["Updated"]</dt>
    <dd>@Model.Data.Updated</dd>
</dl>

<h4>@localizer["User Claims"]</h4>
<ul>
    @foreach (var claim in Model.Data.UserClaims)
    {
        <li>@claim.Type</li>
    }
</ul>

<h4>@localizer["Properties"]</h4>
<table class="table">
    <thead>
        <tr>
            <td>@localizer["Key"]</td>
            <td>@localizer["Value"]</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var prop in Model.Data.Properties)
        {
            <tr>
                <td>@prop.Key</td>
                <td>@prop.Value</td>
            </tr>
        }
    </tbody>
</table>

<h4>@localizer["Operations"]</h4>
@if (this.Model.Data.NonEditable)
{
    <p>@localizer["System resource, can not be delete."]</p>
}
else
{
    <a asp-page="Delete" asp-route-id="@Model.Data.Id" class="btn btn-danger">Delete</a>
}