@model IQueryable<Duende.IdentityServer.EntityFramework.Entities.ApiResource>
<div class="card">
    <div class="card-header">
        <h3 class="card-title">@L["Referenced API resources"]</h3>
    </div>
    <div class="table-responsive">
        <table class="table table-sm card-table">
            <thead>
            <tr>
                <th>@L["Name"]</th>
                <th>@L["Anchor"]</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var api in Model)
            {
                <tr>
                    <td>
                        <a asp-page="/ApiResources/Detail" asp-route-id="@api.Id">@api.DisplayName</a>
                    </td>
                    <td>@api.Name</td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>