@page "{orgId}"
@model OfModel
@{
}

@Html.DisplayFor(m => m.OperationResult)
<div class="row">
    <div class="col-auto">
        <a asp-page="Index" asp-route-anchor="@RouteData.Values["anchor"]" class="btn btn-sm">
            Back
        </a>
    </div>
    <div class="col"><h2>Membership of @Model.Member.Organization.Name</h2></div>
</div>

<form method="post">
    <div class="mb-3">
        <label asp-for="Input.Title" class="form-label"></label>
        <input asp-for="Input.Title" class="form-control" />
        <span asp-validation-for="Input.Title" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Input.Department" class="form-label"></label>
        <input asp-for="Input.Department" class="form-control" />
        <span asp-validation-for="Input.Department" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Input.Remark" class="form-label"></label>
        <input asp-for="Input.Remark" class="form-control" />
        <span asp-validation-for="Input.Remark" class="text-danger"></span>
    </div>
    <div class="form-check">
        <input asp-for="Input.IsOwner" class="form-check-input" />
        <label asp-for="Input.IsOwner" class="form-check-label"></label>
        <span asp-description-for="Input.IsOwner" class="form-check-description"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Input.Visibility" class="form-label"></label>
        <select asp-for="Input.Visibility" asp-items="@Model.MembershipVisibilties" class="form-select"></select>
    </div>
    <button type="submit" class="btn btn-primary">@localizer["Apply"]</button>
</form>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}