@page
@model DeleteModel
@{
    ViewBag.Title = L["Deleting {0}", Model.Organization.Name];
}

@Html.DisplayFor(m => m.Result)
<h1>@ViewBag.Title</h1>
<p>@L["Are you sure you want to delete this organization?"]</p>
<form method="post">
    <div class="mb-3">
        <p>@L["Typing organization name below to confirm deletion."]</p>
        <label asp-for="@Model.Input.Name" class="form-label"></label>
        <input asp-for="@Model.Input.Name" class="form-control"/>
        <span asp-validation-for="@Model.Input.Name" class="text-danger"></span>
    </div>
    <div asp-validation-summary="All"></div>
    <button class="btn btn-danger" type="submit">@SL["Delete"]</button>
</form>