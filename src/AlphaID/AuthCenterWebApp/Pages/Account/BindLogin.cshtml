@page
@model BindLoginModel
@{
    this.Layout = "_AuthenticationLayout";
    this.ViewBag.Title = this.localizer["Binding external account"].Value;
}

<div class="page page-center">
    <div class="container container-tight py-4">
        <div class="text-center mb-4">
            <a asp-area="" asp-page="/Index" class="navbar-brand navbar-brand-autodark">
                <img src="/logo.png" width="32" height="32" alt="Tabler" class="navbar-brand-image">
                @(this.product.Value.Name) @localizer["Account"]
            </a>
        </div>
        <div class="card card-md">
            <div class="card-body">
                <p>@localizer["You are now signing in from external, sign in {0} for binding to external login.", product.Value.Name]</p>
                <form method="post">
                    <input type="hidden" asp-for="Input.ReturnUrl" />

                    <div class="form-group">
                        <label asp-for="Input.Username" class="form-label"></label>
                        <input class="form-control" asp-for="Input.Username" autofocus>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Password" class="form-label"></label>
                        <input type="password" class="form-control" placeholder="密码" asp-for="Input.Password" autocomplete="off">
                    </div>
                    <partial name="_ValidationSummary" />
                    <button class="btn btn-primary" name="Input.Button" value="login">@localizer["Sign in"]</button>
                    <button class="btn btn-secondary" name="Input.Button" value="cancel">@localizer["Cancel"]</button>

                    <p><a asp-page="ForgetPassword">忘记密码？</a></p>
                </form>
            </div>
        </div>
        <div class="text-center text-secondary mt-3">
            @localizer["Don't have account yet?"] <a asp-page="SignUp" tabindex="-1">@localizer["Sign up"]</a>
        </div>
    </div>
</div>