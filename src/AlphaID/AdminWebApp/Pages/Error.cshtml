@page
@model ErrorModel
@{
    Layout = "Tabler/_Page_Center";
    ViewBag.Title = L["Error!"];
}

<div class="container container-tight py-4">
    <h1 class="text-danger">@L["Error!"]:-(</h1>
    <h2 class="text-danger">@L["Errors occurred when process requests."]</h2>

    @if (Model.ShowRequestId)
    {
        <p>
            <strong>@L["Request ID:"]</strong> <code>@Model.RequestId</code>
        </p>
    }

    <p>@L["Contact administrator, or retry again later."]</p>
    <a asp-page="/Index" asp-area="" class="btn btn-primary">@L["Go home"]</a>
</div>