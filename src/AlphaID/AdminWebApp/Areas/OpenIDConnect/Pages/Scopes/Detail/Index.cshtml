@page
@model IndexModel
@{
    ViewBag.Title = L["Overview"];
}

<h2>@ViewBag.Title</h2>

<div class="card">
    <div class="card-header">
        <h3 class="card-title">@L["Base info"]</h3>
    </div>
    <div class="card-body">
        <div class="datagrid">
            <div class="datagrid-item">
                <div class="datagrid-title">@L["Name"]</div>
                <div class="datagrid-content">@Model.Data.Name</div>
            </div>
            <div class="datagrid-item">
                <div class="datagrid-title">@L["Display name"]</div>
                <div class="datagrid-content">@Model.Data.DisplayName</div>
            </div>
            <div class="datagrid-item">
                <div class="datagrid-title">@L["Status"]</div>
                <div class="datagrid-content">@Model.Data.Enabled</div>
            </div>
            <div class="datagrid-item">
                <div class="datagrid-title">@L["Description"]</div>
                <div class="datagrid-content">@Model.Data.Description</div>
            </div>
            <div class="datagrid-item">
                <div class="datagrid-title">@L["Emphasize"]</div>
                <div class="datagrid-content">@Model.Data.Emphasize</div>
            </div>
            <div class="datagrid-item">
                <div class="datagrid-title">@L["Show in Disco"]</div>
                <div class="datagrid-content">@Model.Data.ShowInDiscoveryDocument</div>
            </div>
        </div>
    </div>
</div>

<h2>@L["Related resources"]</h2>
<vc:referenced-clients scope="@Model.Data.Name"></vc:referenced-clients>

<vc:referenced-api-resources scope="@Model.Data.Name"></vc:referenced-api-resources>

<h2>@L["Operations"]</h2>

<a asp-page="Delete" asp-route-id="@Model.Data.Id" class="btn btn-danger">@L["Delete scope"]</a>