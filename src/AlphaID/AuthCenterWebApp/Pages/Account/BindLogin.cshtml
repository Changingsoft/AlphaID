@page
@inject IOptions<ProductInfo> production
@model BindLoginModel
@{
}
<div class="login-page">
    <div class="lead">
        <h1>关联 @production.Value.Name</h1>
        <p>您正在从外部登录，我们无法确认您的 @production.Value.Name。请登录 @production.Value.Name 以便建立关联。</p>
    </div>
    <partial name="_ValidationSummary" />

    <div class="row">

        <div class="col-sm-6">
            <div class="card">
                <div class="card-header">
                    @production.Value.Name 帐户
                </div>

                <div class="card-body">
                    <form asp-page="/Account/Login/Index">
                        <input type="hidden" asp-for="Input.ReturnUrl" />

                        <div class="form-group">
                            <label asp-for="Input.Username"></label>
                            <input class="form-control" asp-for="Input.Username" autofocus>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.Password"></label>
                            <input type="password" class="form-control" placeholder="密码" asp-for="Input.Password" autocomplete="off">
                        </div>

                        <button class="btn btn-primary" name="Input.Button" value="login">登录</button>
                        <button class="btn btn-secondary" name="Input.Button" value="cancel">取消</button>

                        <p><a asp-page="ForgetPassword">忘记密码？</a></p>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="card">
                <div class="card-body">
                    <a asp-page="SignUp" asp-route-returnUrl="@this.Model.Input.ReturnUrl" asp-route-external="external" class="btn btn-primary btn-lg">没有@(production.Value.Name)？创建@(production.Value.Name)</a>
                </div>
            </div>
        </div>
    </div>
</div>