@inject OrganizationManager manager
@{
    Layout = "Shared/_Layout";

    var id = this.ViewContext.RouteData.Values["anchor"]?.ToString();
    GenericOrganization? org = null;
    if (id != null)
    {
        org = await this.manager.FindByIdAsync(id);
    }
}
@section PageHeader{
    <h1 class="page-title">@org?.Name</h1>
}
<div class="card">
    <div class="row g-0">
        <div class="col-12 col-md-3 border-end">
            <div class="card-body">
                <div class="list-group list-group-transparent">
                    <a class="list-group-item list-group-item-action d-flex align-items-center" asp-path="/Organizations/Detail/@(ViewContext.RouteData.Values["anchor"])" asp-match-prefix="false" asp-page="/Detail/Index" asp-route-anchor="@ViewContext.RouteData.Values["anchor"]">@L["Overview"]</a>
                    <a class="list-group-item list-group-item-action d-flex align-items-center" asp-path="/Organizations/Detail/@(ViewContext.RouteData.Values["anchor"])/General" asp-page="/Detail/General" asp-route-anchor="@ViewContext.RouteData.Values["anchor"]">@L["General"]</a>
                    <a class="list-group-item list-group-item-action d-flex align-items-center" asp-path="/Organizations/Detail/@(ViewContext.RouteData.Values["anchor"])/Financial" asp-page="/Detail/Financial/Index" asp-route-anchor="@ViewContext.RouteData.Values["anchor"]">@L["Financial"]</a>
                    <a class="list-group-item list-group-item-action d-flex align-items-center" asp-path="/Organizations/Detail/@(ViewContext.RouteData.Values["anchor"])/Members" asp-page="/Detail/Members/Index" asp-route-anchor="@ViewContext.RouteData.Values["anchor"]">@L["Members"]</a>
                    @* <a class="list-group-item list-group-item-action d-flex align-items-center" href="#">@L["Attachments"]</a> *@
                    @* <a class="list-group-item list-group-item-action d-flex align-items-center" href="#">@L["Advanced"]</a> *@
                </div>
            </div>
        </div>
        <div class="col-12 col-md-9 d-flex flex-column">
            <div class="card-body">
                @RenderBody()
            </div>
        </div>
    </div>
</div>


@section scripts
    {
    @RenderSection("scripts", false)
}