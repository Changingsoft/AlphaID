@page "{id}"
@model AdminWebApp.Areas.OpenIDConnect.Pages.ApiResources.Detail.ClaimsModel
@{
}
<h2>@L["User Claims"]</h2>

<form method="post" asp-page-handler="Remove">
    <table class="table">
        <thead>
            <tr>
                <td>@L["Type"]</td>
                <td></td>
            </tr>
        </thead>
        <tbody>
            @foreach(var claim in Model.Data.UserClaims)
            {
                <tr>
                    <td>@claim.Type</td>
                    <td><button type="submit" class="btn btn-sm btn-danger" name="claimId" value="@claim.Id" onclick="return confirm('@L["Are you sure you want to remove this claim?"]');">@L["Remove"]</button></td>
                </tr>
            }
        </tbody>
    </table>
</form>

<div class="card">
    <div class="card-header">
        <h3>@L["Add Claim"]</h3>
    </div>
    <div class="card-body">
        <form method="post" asp-page-handler="Add">
            <div class="mb-3">
                <label asp-for="NewClaim" class="form-label"></label>
                <input asp-for="NewClaim" class="form-control" />
                <span asp-validation-for="NewClaim" class="text-danger"></span>
            </div>
            <div asp-validation-summary="All" class="text-danger"></div>
            <button type="submit" class="btn btn-primary">@L["Add"]</button>
        </form>
    </div>
</div>