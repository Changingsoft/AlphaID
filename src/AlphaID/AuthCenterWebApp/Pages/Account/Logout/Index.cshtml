@page
@model AuthCenterWebApp.Pages.Account.Logout.Index

<div class="page page-center">
    <div class="container container-tight py-4">

        <div class="logout-page">
            <div class="lead">
                <h1>@localizer["Sign out"]</h1>
                <p>@localizer["Are you sure you want to sign out from {0}?", this.product.Value.Name]</p>
            </div>

            <form asp-page="/Account/Logout/Index">
                <input type="hidden" asp-for="LogoutId" />
                <input type="hidden" asp-for="ReturnUrl" />

                <div class="form-group">
                    <button class="btn btn-primary">@localizer["Yes"]</button>
                    <a href="@Model.ReturnUrl" class="btn">@localizer["No"]</a>
                </div>
            </form>
        </div>
    </div>
</div>