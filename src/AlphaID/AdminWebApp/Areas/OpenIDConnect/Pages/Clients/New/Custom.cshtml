@page
@model CustomModel
@{
}
<h3>@L["Create new client"]</h3>
<form method="post">
    <h4>Base</h4>
    <div class="mb-3">
        <label asp-for="ClientId" class="form-label required"></label>
        <input asp-for="ClientId" class="form-control"/>
        <span asp-description-for="ClientId" class="form-hint"></span>
        <span asp-validation-for="ClientId" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Input.ClientName" class="form-label required"></label>
        <input asp-for="Input.ClientName" class="form-control"/>
        <span asp-description-for="Input.ClientName" class="form-hint"></span>
        <span asp-validation-for="Input.ClientName" class="text-danger"></span>
    </div>
    <div class="form-check">
        <input asp-for="Input.RequireClientSecret" class="form-check-input"/>
        <label asp-for="Input.RequireClientSecret" class="form-check-label"></label>
        <span asp-description-for="Input.RequireClientSecret" class="form-hint"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Input.ClientSecret" class="form-label"></label>
        <input asp-for="Input.ClientSecret" class="form-control"/>
        <span asp-description-for="Input.ClientSecret" class="form-hint"></span>
        <span asp-validation-for="Input.ClientSecret" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Input.Description" class="form-label"></label>
        <input asp-for="Input.Description" class="form-control"/>
        <span asp-description-for="Input.Description" class="form-hint"></span>
        <span asp-validation-for="Input.Description" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Input.RedirectUri" class="form-label"></label>
        <input asp-for="Input.RedirectUri" class="form-control"/>
        <span asp-description-for="Input.RedirectUri" class="form-hint"></span>
        <span asp-validation-for="Input.RedirectUri" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Input.DefaultGrantType" class="form-label"></label>
        <input asp-for="Input.DefaultGrantType" class="form-control"/>
        <span asp-description-for="Input.DefaultGrantType" class="form-hint"></span>
        <span asp-validation-for="Input.DefaultGrantType" class="text-danger"></span>
    </div>
    <div class="form-check">
        <input asp-for="Input.RequireConsent" class="form-check-input"/>
        <label asp-for="Input.RequireConsent" class="form-check-label"></label>
        <span asp-description-for="Input.RequireConsent" class="form-check-description"></span>
    </div>
    <div class="form-check">
        <input asp-for="Input.AllowRememberConsent" class="form-check-input"/>
        <label asp-for="Input.AllowRememberConsent" class="form-check-label"></label>
        <span asp-description-for="Input.AllowRememberConsent" class="form-check-description"></span>
    </div>

    <h4>Security</h4>
    <div class="form-check">
        <input asp-for="Input.RequirePkce" class="form-check-input"/>
        <label asp-for="Input.RequirePkce" class="form-check-label"></label>
        <span asp-description-for="Input.RequirePkce" class="form-check-description"></span>
    </div>
    <div class="form-check">
        <input asp-for="Input.AllowPlainTextPkce" class="form-check-input"/>
        <label asp-for="Input.AllowPlainTextPkce" class="form-check-label"></label>
        <span asp-description-for="Input.AllowPlainTextPkce" class="form-check-description"></span>
    </div>
    <div class="form-check">
        <input asp-for="Input.AllowOfflineAccess" class="form-check-input"/>
        <label asp-for="Input.AllowOfflineAccess" class="form-check-label"></label>
    </div>
    <div class="mb-3">
        <label asp-for="Input.IdentityTokenLifetime" class="form-label"></label>
        <input asp-for="Input.IdentityTokenLifetime" class="form-control"/>
        <span asp-validation-for="Input.IdentityTokenLifetime" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Input.AccessTokenLifetime" class="form-label"></label>
        <input asp-for="Input.AccessTokenLifetime" class="form-control"/>
        <span asp-validation-for="Input.AccessTokenLifetime" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Input.ClientUri" class="form-label"></label>
        <input asp-for="Input.ClientUri" class="form-control"/>
        <span asp-validation-for="Input.ClientUri" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Input.LogoUri" class="form-label"></label>
        <input asp-for="Input.LogoUri" class="form-control"/>
        <span asp-validation-for="Input.LogoUri" class="text-danger"></span>
    </div>

    <div asp-validation-summary="All"></div>
    <button type="submit" class="btn btn-primary">@SL["Create"]</button>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial"/>
}