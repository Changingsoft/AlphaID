@page
@model NewModel
@{
    ViewBag.Title = L["Create an identity provider"];
}
<h2>@ViewBag.Title</h2>

<form method="post">
    <div class="mb-3">
        <label asp-for="Input.Scheme" class="form-label"></label>
        <input asp-for="Input.Scheme" class="form-control"/>
        <span asp-description-for="Input.Scheme" class="form-hint"></span>
        <span asp-validation-for="Input.Scheme" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Input.DisplayName" class="form-label"></label>
        <input asp-for="Input.DisplayName" class="form-control"/>
        <span asp-description-for="Input.DisplayName" class="form-hint"></span>
        <span asp-validation-for="Input.DisplayName" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Input.Authority" class="form-label"></label>
        <input asp-for="Input.Authority" class="form-control"/>
        <span asp-description-for="Input.Authority" class="form-hint"></span>
        <span asp-validation-for="Input.Authority" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Input.ResponseType" class="form-label"></label>
        <input asp-for="Input.ResponseType" class="form-control"/>
        <span asp-description-for="Input.ResponseType" class="form-hint"></span>
        <span asp-validation-for="Input.ResponseType" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Input.ClientId" class="form-label"></label>
        <input asp-for="Input.ClientId" class="form-control"/>
        <span asp-description-for="Input.ClientId" class="form-hint"></span>
        <span asp-validation-for="Input.ClientId" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Input.ClientSecret" class="form-label"></label>
        <input asp-for="Input.ClientSecret" class="form-control"/>
        <span asp-description-for="Input.ClientSecret" class="form-hint"></span>
        <span asp-validation-for="Input.ClientSecret" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Input.Scope" class="form-label"></label>
        <input asp-for="Input.Scope" class="form-control"/>
        <span asp-description-for="Input.Scope" class="form-hint"></span>
        <span asp-validation-for="Input.Scope" class="text-danger"></span>
    </div>
    <div class="form-check">
        <input asp-for="Input.GetClaimsFromUserInfoEndpoint" class="form-check-input"/>
        <label asp-for="Input.GetClaimsFromUserInfoEndpoint" class="form-check-label"></label>
        <span asp-description-for="Input.GetClaimsFromUserInfoEndpoint" class="form-check-description"></span>
    </div>
    <div class="form-check">
        <input asp-for="Input.UsePkce" class="form-check-input"/>
        <label asp-for="Input.UsePkce" class="form-check-label"></label>
        <span asp-description-for="Input.UsePkce" class="form-check-description"></span>
    </div>
    <button type="submit" class="btn btn-primary">@SL["Create"]</button>
</form>