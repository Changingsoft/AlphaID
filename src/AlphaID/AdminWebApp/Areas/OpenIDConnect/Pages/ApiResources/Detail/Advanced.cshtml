@page "{id}"
@model AdvancedModel
@{
}
<h2>@L["Advanced"]</h2>

<h3>@L["Properties"]</h3>
<form method="post" asp-page-handler="Remove">
    <table class="table">
        <thead>
        <tr>
            <td>@L["Key"]</td>
            <td>@L["Value"]</td>
            <td></td>
        </tr>
        </thead>
        <tbody>
        @foreach (var prop in Model.Data.Properties)
        {
            <tr>
                <td>@prop.Key</td>
                <td>@prop.Value</td>
                <td>
                    <button type="submit" class="btn btn-sm btn-danger" name="propId" value="@prop.Id" onclick="return confirm('@L["Are you sure you want remove it?"]');">@L["Remove"]</button>
                </td>
            </tr>
        }
        </tbody>
    </table>
</form>

<div class="card">
    <div class="card-header">
        <h3>@L["Add property"]</h3>
    </div>
    <div class="card-body">
        <form method="post" asp-page-handler="Add">
            <div class="mb-3">
                <label asp-for="NewKey" class="form-label"></label>
                <input asp-for="NewKey" class="form-control"/>
                <span asp-validation-for="NewKey"></span>
            </div>
            <div class="mb-3">
                <label asp-for="NewValue" class="form-label"></label>
                <input asp-for="NewValue" class="form-control"/>
                <span asp-validation-for="NewValue"></span>
            </div>
            <div asp-validation-summary="All" class="text-danger"></div>
            <button type="submit" class="btn btn-primary">@L["Add"]</button>
        </form>
    </div>
</div>