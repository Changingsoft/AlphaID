@page
@model AuthCenterWebApp.Pages.Organizations.IndexModel
@{
    this.ViewBag.Title = this.localizer["Organizations"].Value;
}

<div class="page-body">
    <div class="container-xl">
        <h1>@localizer["Organizations"]</h1>
        <div class="card">
            <div class="list-group list-group-flush list-group-hoverable">
                @foreach (var member in Model.OrganizationMembers)
                {
                    <div class="list-group-item">
                        <div class="row align-items-center">
                            <div class="col-auto"><span class="badge bg-red"></span></div>
                            <div class="col-auto">
                                <a asp-area="Organization" asp-page="/Index" asp-route-id="@member.OrganizationId">
                                    <span class="avatar" style="background-image: url('/img/no-picture-avatar.png')"></span>
                                </a>
                            </div>
                            <div class="col text-truncate">
                                <a asp-area="Organization" asp-page="/Index" asp-route-id="@member.OrganizationId" class="text-reset d-block">@member.Organization.Name</a>
                                <div class="d-block text-secondary text-truncate mt-n1">@member.Title @member.Department @member.Remark</div>
                            </div>
                            <div class="col-auto">
                                <a href="#" class="list-group-item-actions">
                                    <!-- Download SVG icon from http://tabler-icons.io/i/star -->
                                    <svg xmlns="http://www.w3.org/2000/svg" class="icon text-secondary" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path d="M12 17.75l-6.172 3.245l1.179 -6.873l-5 -4.867l6.9 -1l3.086 -6.253l3.086 6.253l6.9 1l-5 4.867l1.179 6.873z"></path></svg>
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
        <a asp-page="Create" class="btn">@localizer["New organization"]</a>
    </div>
</div>

