@page
@model             IndexModel
@{
}

<h2>Overview</h2>
<form method="post">
    <div class="mb-3">
        <label asp-for="Input.ClientName" class="form-label"></label>
        <input asp-for="Input.ClientName" class="form-control" />
        <span asp-validation-for="Input.ClientName" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Input.ClientId" class="form-label"></label>
        <input asp-for="Input.ClientId" class="form-control" />
        <span asp-validation-for="Input.ClientId" class="text-danger"></span>
    </div>
    <div class="form-check">
        <input asp-for="Input.Enabled" class="form-check-input" />
        <label asp-for="Input.Enabled" class="form-check-label"></label>
        <span asp-validation-for="Input.Enabled" class="text-danger"></span>
    </div>
    <div class="form-check">
        <input asp-for="Input.RequireClientSecret" class="form-check-input" />
        <label asp-for="Input.RequireClientSecret" class="form-check-label"></label>
        <span asp-validation-for="Input.RequireClientSecret" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Input.Description" class="form-label"></label>
        <input asp-for="Input.Description" class="form-control" />
        <span asp-validation-for="Input.Description" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Input.LogoUri" class="form-label"></label>
        <input asp-for="Input.LogoUri" class="form-control" />
        <span asp-validation-for="Input.LogoUri" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Input.ClientUri" class="form-label"></label>
        <input asp-for="Input.ClientUri" class="form-control" />
        <span asp-validation-for="Input.ClientUri" class="text-danger"></span>
    </div>
    <div asp-validation-summary="All"></div>
    <button type="submit" class="btn btn-primary">Apply Changes</button>
    <p class="text-success">@Model.OperationMessage</p>
</form>


<h4>Danger zone</h4>

@if (this.Model.Client.NonEditable)
{
    <p>System client, do not delete.</p>
}
else
{
    <a asp-page="Delete" asp-route-anchor="@Model.Client.Id" class="btn btn-danger">Delete client</a>
}