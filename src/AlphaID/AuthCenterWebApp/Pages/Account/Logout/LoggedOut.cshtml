@page
@model AuthCenterWebApp.Pages.Account.Logout.LoggedOut
@{
    this.Layout = "../_AuthenticationLayout";
}
<div class="page page-center">
    <div class="container container-tight py-4">
        <div class="text-center mb-4">
            <h1>
                @localizer["Signed out"]
            </h1>
            <p>@localizer["You've successfully signed out of the login."]</p>
            @if (Model.View.PostLogoutRedirectUri != null)
            {
                <div>
                    <a class="PostLogoutRedirectUri btn" href="@Model.View.PostLogoutRedirectUri">@localizer["Return back to"] @Model.View.ClientName</a>
                </div>
            }

            @if (Model.View.SignOutIframeUrl != null)
            {
                <iframe width="0" height="0" class="signout" src="@Model.View.SignOutIframeUrl"></iframe>
            }
        </div>
    </div>
</div>

@section scripts
    {
    @if (Model.View.AutomaticRedirectAfterSignOut)
    {
        <script src="~/js/signout-redirect.js"></script>
    }
}