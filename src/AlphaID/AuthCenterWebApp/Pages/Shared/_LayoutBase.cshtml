@{
    this.Layout = "_LayoutRoot";
}

@section Heads{
    <link rel="stylesheet" href="~/lib/tabler/dist/css/tabler.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap-icons/bootstrap-icons.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AuthCenterWebApp.styles.css" asp-append-version="true" />
    @RenderSection("Heads", false)
}

<div class="page">
    <header class="navbar navbar-expand-md d-print-none">
        <div class="container-xl">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbar-menu" aria-controls="navbar-menu" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <h1 class="navbar-brand navbar-brand-autodark d-none-navbar-horizontal pe-0 pe-md-3">
                <a href="/">
                    <img src="/static/logo-small.svg" width="32" height="32" alt="Tabler" class="navbar-brand-image me-3">
                    @product.Value.Name
                </a>
            </h1>
            <div class="navbar-nav flex-row order-md-last">
                <div class="nav-item d-none d-md-flex me-3">
                    <div class="btn-list">
                        <partial name="_SelectLanguagePartial" />
                    </div>
                </div>
                <partial name="_LoginPartial" />
            </div>
        </div>
    </header>
    @await RenderSectionAsync("Navbar")
    <div class="page-wrapper">
        @RenderBody()
        <footer class="footer footer-transparent d-print-none">
            <div class="container-xl">
                <div class="row text-center align-items-center flex-row-reverse">
                    <div class="col-lg-auto ms-lg-auto">
                        <ul class="list-inline list-inline-dots mb-0">
                            <li class="list-inline-item">
                                <a href="~/.well-known/openid-configuration" class="link-secondary" target="_blank">@localizer["Discovery Document"]</a>
                            </li>
                            <li class="list-inline-item">
                                <a asp-area="Developer" asp-page="/Index" class="link-secondary" target="_blank">@localizer["Developer Center"]</a>
                            </li>
                            @if (this.User.IsInRole("Administrators"))
                            {
                                <li class="list-inline-item">
                                    <a asp-area="Admin" asp-page="/Index" class="link-secondary">@localizer["System Management"]</a>
                                </li>
                            }
                        </ul>
                    </div>
                    <div class="col-12 col-lg-auto mt-3 mt-lg-0">
                        <ul class="list-inline list-inline-dots mb-0">
                            <li class="list-inline-item">
                                Copyright Â© 2023 @(product.Value.Copyright)
                            </li>
                            <li class="list-inline-item">
                                <a asp-area="" asp-page="/Terms" class="link-secondary">@localizer["Terms of Service"]</a>
                            </li>
                            <li class="list-inline-item">
                                <a asp-area="" asp-page="/Privacy" class="link-secondary">@localizer["Privacy"]</a>
                            </li>

                        </ul>
                    </div>
                </div>
            </div>
            
        </footer>
    </div>
</div>
@*For debug, this partial will show only in development environment.*@
<partial name="_DebugPartial" />

@section Scripts{
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/tabler/dist/js/tabler.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
}