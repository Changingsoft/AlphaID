        <span asp-validation-for="Input.ConsentLifetime"></span>
    </div>

    <h4>@L["Device flow"]</h4>
    <div class="mb-3">
        <label asp-for="Input.UserCodeType" class="form-label"></label>
        <input asp-for="Input.UserCodeType" class="form-control" />
        <span asp-description-for="Input.UserCodeType" class="form-hint"></span>
        <span asp-validation-for="Input.UserCodeType"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Input.DeviceCodeLifetime" class="form-label"></label>
        <input asp-for="Input.DeviceCodeLifetime" class="form-control" />
        <span asp-description-for="Input.DeviceCodeLifetime" class="form-hint"></span>
        <span asp-validation-for="Input.DeviceCodeLifetime"></span>
    </div>

    <h4>@L["CIBA"]</h4>
    <div class="mb-3">
        <label asp-for="Input.CibaLifetime" class="form-label"></label>
        <input asp-for="Input.CibaLifetime" class="form-control" />
        <span asp-description-for="Input.CibaLifetime" class="form-hint"></span>
        <span asp-validation-for="Input.CibaLifetime"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Input.PollingInterval" class="form-label"></label>
        <input asp-for="Input.PollingInterval" class="form-control" />
        <span asp-description-for="Input.PollingInterval" class="form-hint"></span>
        <span asp-validation-for="Input.PollingInterval"></span>
    </div>

    <h4>@L["DPoP"]</h4>
    <div class="form-check">
        <input asp-for="Input.RequireDPoP" class="form-check-input" />
        <label asp-for="Input.RequireDPoP" class="form-check-label"></label>
        <span asp-description-for="Input.RequireDPoP" class="form-check-description"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Input.DPoPValidationMode" class="form-label"></label>
        <select asp-for="Input.DPoPValidationMode" class="form-control">
            <option value="Custom">Custom</option>
            <option value="Iat">Iat</option>
            <option value="Nonce">Nonce</option>
            <option value="IatAndNonce">IatAndNonce</option>
        </select>
        <span asp-description-for="Input.DPoPValidationMode" class="form-hint"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Input.DPoPClockSkew" class="form-label"></label>
        <input asp-for="Input.DPoPClockSkew" class="form-control" />
        <span asp-description-for="Input.DPoPClockSkew" class="form-hint"></span>
        <span asp-validation-for="Input.DPoPClockSkew"></span>
