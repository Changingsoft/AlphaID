@page "{id}"
@model ExternalLoginsModel
@{
}
<h1>@localizer["External Logins"]</h1>

<form method="post">
    <table class="table">
        <thead>
            <tr>
                <td>@localizer["Provider"]</td>
                <td>@localizer["Display Name"]</td>
                <td>@localizer["Key"]</td>
                <td>@localizer["Operations"]</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var login in this.Model.Logins)
            {
                <tr>
                    <td>@login.LoginProvider</td>
                    <td>@login.ProviderDisplayName</td>
                    <td>@login.ProviderKey</td>
                    <td><button type="submit" class="btn btn-danger btn-sm" asp-page-handler="Remove" asp-route-provider="@login.LoginProvider" asp-route-pkey="@login.ProviderKey" onclick="return confirm('一旦解除绑定，只能由用户本人才能重新绑定。确定要解除吗？');">解除</button></td>
                </tr>
            }
        </tbody>
    </table>
</form>
<p>@localizer["Notes that person will only rebind external login by itself that if unbind."]</p>