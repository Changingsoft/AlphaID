@page
@model ValidateChineseIdCardModel
@{
}
<h2>验证身份证</h2>

<div class="row">
    <div class="col-6">
        @if (Model.Data.ChineseIdCardImage != null)
        {
            <img src="data:@(Model.Data.ChineseIdCardImage.PersonalFaceMimeType);base64,@(Convert.ToBase64String(Model.Data.ChineseIdCardImage.PersonalFace))" class="img-flued img-thumbnail" />
        }
        <p>姓名：@Model.Data.ChineseIdCard?.Name</p>
        <p>性别：@Model.Data.ChineseIdCard?.Gender</p>
        <p>出生日期：@Model.Data.ChineseIdCard?.DateOfBirth</p>
        <p>民族：@Model.Data.ChineseIdCard?.Ethnicity</p>
        <p>住址：@Model.Data.ChineseIdCard?.Address</p>
        <p>身份证号码：@Model.Data.ChineseIdCard?.CardNumber</p>
    </div>
    <div class="col-6">
        @if (Model.Data.ChineseIdCardImage != null)
        {
            <img src="data:@(Model.Data.ChineseIdCardImage.IssuerFaceMimeType);base64,@(Convert.ToBase64String(Model.Data.ChineseIdCardImage.IssuerFace))" class="img-flued img-thumbnail" />
        }
        <p>签发机关：@Model.Data.ChineseIdCard?.Issuer</p>
        <p>签发日期：@Model.Data.ChineseIdCard?.IssueDate</p>
        <p>有效期至：@Model.Data.ChineseIdCard?.Expires</p>
    </div>
</div>

<form method="post">
    <div class="form-check">
        <input asp-for="Input.Accepted" class="form-check-input" />
        <label asp-for="Input.Accepted" class="form-check-label"></label>
    </div>
    <div class="mb-3">
        <label asp-for="Input.Surname" class="form-label"></label>
        <input asp-for="Input.Surname" class="form-control" />
        <span asp-validation-for="Input.Surname" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Input.GivenName" class="form-label"></label>
        <input asp-for="Input.GivenName" class="form-control" />
        <span asp-validation-for="Input.GivenName" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Input.PinyinSurname" class="form-label"></label>
        <input asp-for="Input.PinyinSurname" class="form-control" />
        <span asp-validation-for="Input.PinyinSurname" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Input.PinyinGivenName" class="form-label"></label>
        <input asp-for="Input.PinyinGivenName" class="form-control" />
        <span asp-validation-for="Input.PinyinGivenName" class="text-danger"></span>
    </div>
    <div asp-validation-summary="All"></div>
    <button type="submit" class="btn btn-primary">提交</button>
</form>