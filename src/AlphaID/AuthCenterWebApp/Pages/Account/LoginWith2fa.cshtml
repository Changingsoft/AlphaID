@page
@model AuthCenterWebApp.Pages.Account.LoginWith2FaModel
@{
    Layout = "Tabler/_Page_Center";
    ViewBag.Title = L["Two-factor authentication"];
}
<div class="container container-tight py-4">
    <div class="text-center mb-4">
        <a asp-area="" asp-page="/Index" class="navbar-brand navbar-brand-autodark">
            <img src="/logo.png" width="32" height="32" alt="Tabler" class="navbar-brand-image">
            @(Product.Value.Name) @L["Account"]
        </a>
    </div>
    <div class="card card-md">
        <div class="card-body">
            <h2 class="h2 text-center mb-4">@ViewBag.Title</h2>
            <p>@L["Your login is protected with an authenticator app. Enter your authenticator code below."]</p>
            <form method="post" asp-route-returnUrl="@Model.ReturnUrl">
                <input asp-for="RememberMe" type="hidden" />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="mb-3">
                    <input asp-for="Input.TwoFactorCode" class="form-control" autocomplete="off" autofocus />
                    <label asp-for="Input.TwoFactorCode" class="form-label"></label>
                    <span asp-validation-for="Input.TwoFactorCode" class="text-danger"></span>
                </div>
                <div>
                    <div class="checkbox">
                        <label asp-for="Input.RememberMachine" class="form-label">
                            <input asp-for="Input.RememberMachine" />
                            @Html.DisplayNameFor(m => m.Input.RememberMachine)
                        </label>
                    </div>
                </div>
                <div>
                    <button type="submit" class="w-100 btn btn-lg btn-primary">@L["Sign in"]</button>
                </div>
            </form>
            <p>
                @L["Don't have access to your authenticator device? You can"]
                <a id="recovery-code-login" asp-page="./LoginWithRecoveryCode" asp-route-returnUrl="@Model.ReturnUrl">@L["log in with a recovery code"]</a>.
            </p>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}