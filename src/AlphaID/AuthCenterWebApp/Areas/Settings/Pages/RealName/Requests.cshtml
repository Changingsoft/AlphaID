@page
@using IdSubjects.RealName.Requesting
@model RequestsModel
@{
}
<table class="table">
    <thead>
    <tr>
        <th>@L["Type"]</th>
        <th>@L["Status"]</th>
        <th>@L["Audit at"]</th>
        <th>@L["Auditor"]</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var request in Model.RealNameRequests)
    {
        var requestType = request switch
        {
            ChineseIdCardRealNameRequest => L["Chinese ID Card Request"],
            _ => L["Unknown"]
        };
        <tr>
            <td>
                <a asp-page="Request" asp-route-id="@request.Id">@requestType</a>
            </td>
            <td>@request.Accepted</td>
            <td>@request.AuditTime</td>
            <td>@request.Auditor</td>
        </tr>
    }
    </tbody>
</table>