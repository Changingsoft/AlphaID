@page
@model SetPhoneNumberModel
@{
    ViewBag.Title = L["Set phone number"];
}
<h1>@ViewBag.Title</h1>

<form method="post">
    <div class="mb-3">
        <label asp-for="PhoneNumber" class="form-label"></label>
        <div class="input-group mb-2">
            <span class="input-group-text" id="basic-addon1">+86</span>
            <input asp-for="PhoneNumber" class="form-control" />
        </div>
        <span asp-description-for="PhoneNumber"></span>
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>
    <div class="form-check mb-3">
        <input asp-for="PhoneNumberConfirmed" class="form-check-input" />
        <label asp-for="PhoneNumberConfirmed" class="form-check-label"></label>
    </div>
    <button type="submit" class="btn btn-primary">@SL["Apply changes"]</button>
</form>