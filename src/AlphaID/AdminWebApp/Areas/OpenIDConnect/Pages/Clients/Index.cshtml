@page
@model IndexModel
@{
    this.ViewBag.Title = "Clients";
}

@section PageHeader{
    <div class="row">
        <div class="col">
            <h1>Clients</h1>
        </div>
        <div class="col-auto">
            <a asp-page="Create" class="btn btn-primary">@localizer["New client"]</a>
        </div>
    </div>
}


<table class="table">
    <thead>
        <tr>
            <td>@localizer["Name"]</td>
            <td>@localizer["Workflow"]</td>
            <td>@localizer["Scopes"]</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var client in this.Model.Clients)
        {
            <tr>
                <td>
                    <p>
                        <a asp-page="Detail/Index" asp-route-anchor="@client.Id">@(client.ClientName)</a>
                        @if (client.RequireClientSecret)
                        {
                            <span class="badge bg-pink text-pink-fg">credentials</span>
                        }

                        @if (client.RequirePkce)
                        {
                            <span class="badge bg-azure text-azure-fg">PKCE</span>
                        }
                    </p>
                    <p><span class="text-muted small">@client.ClientId</span></p>
                    <p>@client.Description</p>
                </td>
                <td>
                    @Html.Raw(client.AllowedGrantTypes.Select(p => p.GrantType).Aggregate((x,y) => $"{x}<br />{y}"))
                </td>
                <td>
                    @Html.Raw(client.AllowedScopes.Select(p => p.Scope).Aggregate((x,y) => $"{x}<br />{y}"))
                </td>
            </tr>
        }
    </tbody>
</table>