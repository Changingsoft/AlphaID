    <h4>@L["Third-Party Initiated Login"]</h4>
    <div class="mb-3">
        <label asp-for="Input.InitiateLoginUri" class="form-label"></label>
        <input asp-for="Input.InitiateLoginUri" class="form-control" />
        <span asp-description-for="Input.InitiateLoginUri" class="form-hint"></span>
        <span asp-validation-for="Input.InitiateLoginUri"></span>
    </div>

    <div asp-validation-summary="All" class="text-danger"></div>
    <button type="submit" class="btn btn-primary">@SL["Apply changes"]</button>
</form>


<h4>@L["Properties"]</h4>
<form method="post" asp-page-handler="Remove">
    <table class="table">
        <thead>
            <tr>
                <td>@L["Key"]</td>
                <td>@L["Value"]</td>
                <td></td>
            </tr>
        </thead>
        <tbody>
            @foreach (var prop in Model.Data.Properties)
            {
                <tr>
                    <td>@prop.Key</td>
                    <td>@prop.Value</td>
                    <td><button type="submit" class="btn btn-sm btn-danger" name="propId" , value="@prop.Id">@L["Remove"]</button></td>
                </tr>
            }
        </tbody>
    </table>
</form>

<div class="card">
    <div class="card-header">
        <h4>@L["Add property"]</h4>
    </div>
    <div class="card-body">
        <form method="post" asp-page-handler="Add">
            <div class="mb-3">
                <label asp-for="AddProperty.Key"></label>
                <input asp-for="AddProperty.Key" class="form-control" />
                <span asp-validation-for="AddProperty.Key" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="AddProperty.Value"></label>
                <input asp-for="AddProperty.Value" class="form-control" />
                <span asp-validation-for="AddProperty.Value" class="text-danger"></span>
            </div>
            <div asp-validation-summary="All" class="text-danger"></div>
            <button type="submit" class="btn btn-primary">@L["Add"]</button>
        </form>
    </div>
</div>