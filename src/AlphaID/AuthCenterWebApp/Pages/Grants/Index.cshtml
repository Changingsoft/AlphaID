@page
@model             AuthCenterWebApp.Pages.Grants.Index
@{
}

<div class="page-body">
    <div class="container-xl">
        <div class="grants-page">
            <div class="lead">
                <h1>客户端应用程序权限</h1>
                <p>以下是您授予权限的应用程序列表以及它们有权访问的资源。</p>
            </div>

            @if (Model.View.Grants.Any() == false)
            {
                <div class="row">
                    <div class="col-sm-8">
                        <div class="alert alert-info">
                            您尚未授予对任何应用程序的访问权限
                        </div>
                    </div>
                </div>
            }
            else
            {
                foreach (var grant in Model.View.Grants)
                {
                    <div class="card">
                        <div class="card-header">
                            <div class="row">
                                <div class="col-sm-8 card-title">
                                    @if (grant.ClientLogoUrl != null)
                                    {
                                        <img src="@grant.ClientLogoUrl">
                                    }
                                    <strong>@grant.ClientName</strong>
                                </div>

                                <div class="col-sm-2">
                                    <form asp-page="/Grants/Index">
                                        <input type="hidden" name="clientId" value="@grant.ClientId">
                                        <button class="btn btn-danger">撤销访问权限</button>
                                    </form>
                                </div>
                            </div>
                        </div>

                        <ul class="list-group list-group-flush">
                            @if (grant.Description != null)
                            {
                                <li class="list-group-item">
                                    <label>描述：</label> @grant.Description
                                </li>
                            }
                            <li class="list-group-item">
                                <label>创建于：</label> @grant.Created.ToString("yyyy-MM-dd HH:mm:ss")
                            </li>
                            @if (grant.Expires.HasValue)
                            {
                                <li class="list-group-item">
                                    <label>有效期至：</label> @grant.Expires.Value.ToString("yyyy-MM-dd HH:mm:ss")
                                </li>
                            }
                            @if (grant.IdentityGrantNames.Any())
                            {
                                <li class="list-group-item">
                                    <label>身份授予</label>
                                    <ul>
                                        @foreach (var name in grant.IdentityGrantNames)
                                        {
                                            <li>@name</li>
                                        }
                                    </ul>
                                </li>
                            }
                            @if (grant.ApiGrantNames.Any())
                            {
                                <li class="list-group-item">
                                    <label>API接口授权</label>
                                    <ul>
                                        @foreach (var name in grant.ApiGrantNames)
                                        {
                                            <li>@name</li>
                                        }
                                    </ul>
                                </li>
                            }
                        </ul>
                    </div>
                }
            }
        </div>
    </div>
</div>
