@page "{id}"
@model ScopesModel
@{
}
<h3>授权范围</h3>
<ul>
    @foreach (var scope in this.Model.Data.AllowedScopes)
    {
        <li>@scope.Scope</li>
    }
</ul>

<form method="post">
    <ul>
        @for (var i = 0; i < this.Model.ScopeItems.Count; i++)
        {
            <li>
                <label asp-for="ScopeItems[i].Selected" class="form-check">
                    <input asp-for="ScopeItems[i].Selected" class="form-check-input" disabled="@this.Model.ScopeItems[i].Disabled">
                    <span>@this.Model.ScopeItems[i].Value (@this.Model.ScopeItems[i].Text)</span>
                    <input asp-for="ScopeItems[i].Text" type="hidden">
                    <input asp-for="ScopeItems[i].Value" type="hidden">
                    <input asp-for="ScopeItems[i].Disabled" type="hidden">
                </label>
            </li>
        }
    </ul>
    <button type="submit" class="btn btn-primary">Apply changes</button>
</form>