@inject IOptions<ProductInfo> production
@if (User.Identity!.IsAuthenticated)
{
    <ul class="navbar-nav">
        <li class="nav-item dropdown">
            <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown">你好，@User.Identity.Name</a>
            <div class="dropdown-menu">
                <a class="dropdown-item" href="@this.User.ProfileUrl()">@(this.production.Value.Name)账户</a>
            </div>
        </li>
        <li class="nav-item"><a asp-page="/Account/SignOut" class="nav-link">注销</a></li>
    </ul>
}
else
{
    <ul class="navbar-nav">
        <li class="nav-item"><a class="nav-link" href="@Url.Action("Login", new { ReturnUrl = this.Context.Request.Path })">登录</a></li>
    </ul>
}
